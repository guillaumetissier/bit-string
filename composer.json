{
  "name": "guillaumetissier/bit-string",
  "description": "A PHP library for manipulating bit strings and converting them to various representations",
  "type": "library",
  "license": "MIT",
  "keywords": ["bit", "binary", "bitstring", "codeword", "encoding"],
  "authors": [
    {
      "name": "Guillaume Tissier",
      "email": "guillaume.tissier@yahoo.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-ctype": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Guillaumetissier\\BitString\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Guillaumetissier\\BitString\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "phpstan": "phpstan analyse src tests --level=max",
    "cs-fix": "php-cs-fixer fix"
  }
}